<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斯德哥尔摩情人"
            android:layout_marginRight="80dp"
            android:textSize="17dp"
            android:textColor="#DC000000"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/detail_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="10dp"
                android:layout_marginRight="30dp"
                android:text="12万"/>

            <TextView
                android:id="@+id/detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="10dp"
                android:text="04:30"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/detail_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-5-10"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>