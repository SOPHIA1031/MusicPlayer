<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="68dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_height="65dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/album_cover"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:id="@+id/album_title"
            android:text="《春夏秋冬》"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="秋天该很好，你若尚在场"
            android:id="@+id/album_description"
            android:textSize="12sp"
            android:textColor="#ff848484"
            android:lines="1"
            android:ellipsize="end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <!--  播放量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:id="@+id/album_play_count"
                    android:text="234.5万"
                    android:textSize="7sp"/>
            </LinearLayout>

            <!--  专辑中歌的数量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/play_info_icon"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:text="23集"
                    android:textSize="7sp"
                    android:id="@+id/album_content_size"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>